@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row login-container animated fadeInUp">
    <div class="col-md-7 col-md-offset-2 tiles white no-padding">
        <div class="p-t-30 p-l-40 p-b-20 xs-p-t-10 xs-p-l-10 xs-p-b-10">
            <h2 class="normal">
               Join <img src="https://res.cloudinary.com/dbwpvgyrn/image/upload/c_scale,w_500/v1556882777/logo-dark_fwatrl.png" height="35">
            </h2>
            <div role="tablist">
                or <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="" role="tab" data-toggle="tab">Login</a>
            </div>
        </div>
        <div class="tiles grey p-t-20 p-b-20 no-margin text-black tab-content">
       
            <div role="tabpanel" class="tab-pane active" id="tab_register">
                <form class="animated fadeIn validate" id="" name="" method="post">
                    <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                        <div class="col-md-12 col-sm-12">
                            <input asp-for="Input.Company" class="form-control" placeholder="Company" />
                            <span asp-validation-for="Input.Company" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                        <div class="col-md-12">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row form-row m-l-20 m-r-20 xs-m-l-10 xs-m-r-10">
                        <div class="col-md-12">
                            <button class="btn btn-primary" type="submit">Sign Up</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
