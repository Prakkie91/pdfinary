@model IEnumerable<HtmlToPdf.Models.Template>

@{
    ViewData["Title"] = "Templates";
}


<div class=" container container-fixed-lg p-t-25">
    <!-- START card -->
    <div class="card card-default">
        <div class="card-header ">
            <div class="card-title">
                Your Pdf Templates
            </div>
                <div class="pull-right">
                    <a class="btn btn-primary" asp-action="Create">Create New</a>
                </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <p>
                        View or edit your pdf templates, template documentation can be found <a href="">here</a>.
                    </p>
                    <br>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.LastModifiedDate)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastModifiedDate)
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- END card -->
</div>


