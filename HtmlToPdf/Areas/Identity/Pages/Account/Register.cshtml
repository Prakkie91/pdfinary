@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .hero label {
        font-weight: 400;
        font-size: 16px;
    }

    input.form-control {
        height: 40px;
    }
    .panel-default {
        background-color: white;
        padding: 10px 50px;
        border-radius: 5px;
        -moz-box-shadow: 0 0 10px 1px #999;
        -webkit-box-shadow: 0 0 10px 1px #999;
    }
</style>

<section id="hero" class="section hero" style="padding-top:100px!important">
    <div class="container">
        <div class="row row-content">
            <div class="col-12 col-md-12 col-lg-6">
                <div class="hero-img">
                    <img class="img-fluid" src="~/assets/images/icons/lock.png" alt="background">
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="hero-headline">Get Started</div>
                        <form asp-route-returnUrl="@Model.ReturnUrl" asp-route-subscriptionTypeId="@Model.SubscriptionTypeId" method="post">

                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Register</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <!-- .row end -->
    </div>
    <!-- .container end -->
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
